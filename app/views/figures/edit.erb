<%= @figure.name %>
<form method="POST" action='/figures/<%=@figure.id%>'>
  <label> Figure Name: </label>

  <input type='text' name="figure[name]" id='figure_name'>

  <label> Titles </label>
  <%Title.all.each do |title|%>
    <%=title.name%>
    <input type="checkbox" name="figure[title_ids][]" value="<%=title.id%>" id="title_<%=title.id%>" <%= 'checked' if @figure.titles.include?(title) %>>
  <%end%>

  <label> Landmarks </label>
  <%Landmark.all.each do |landmark|%>
    <%=landmark.name%>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%=landmark.id%>" id="landmark_<%=landmark.id%>" <%= 'checked' if @figure.landmarks.include?(landmark)%>>
  <%end%>

  <h2> Create a new title </h2>
  <label> Title: </label>
  <input type='text' name='title[name]' id='new_title'>

  <h2> Create a new landmark </h2>
  <label> Landmark: </label>
  <input type='text' name='landmark[name]' id="new_landmark">

  <input id="hidden" type='hidden' name="_method" value="patch">
  <input type="submit" value="Edit Figure">
</form>
